version: '3.8'

x-reverb-env: &reverb-env
  REVERB_APP_ID: "250999"
  REVERB_APP_KEY: "hqvlgeytluh49qcvipjr"
  REVERB_APP_SECRET: "kv6vuatnnmkt49ndjpwg"
  REVERB_HOST: "reverb"      # internal host for app->reverb
  REVERB_PORT: "8080"
  REVERB_SCHEME: "http"

x-vite-reverb-env: &vite-reverb-env
  VITE_REVERB_APP_KEY: "hqvlgeytluh49qcvipjr"
  VITE_REVERB_HOST: "localhost"  # browser connects to host
  VITE_REVERB_PORT: "8080"
  VITE_REVERB_SCHEME: "http"

services:
  app:
    build:
      context: .
      dockerfile: ./Dockerfile
    image: beerpongstats-site
    container_name: beerpongstats-site
    restart: unless-stopped
    working_dir: /var/www
    volumes:
      - ./:/var/www
    environment:
      APP_ENV: local
      APP_URL: http://localhost
      BROADCAST_CONNECTION: reverb
      QUEUE_CONNECTION: database
      DB_USERNAME: beerpongstats
      DB_PASSWORD: test
      DB_DATABASE: beerpongstats
      <<: *reverb-env
    networks:
      - app-network

  nginx:
    image: nginx:alpine
    container_name: beerpongstats-nginx
    ports:
      - "80:80"
    volumes:
      - ./:/var/www
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - app
    networks:
      - app-network

  node:
    platform: linux/x86_64 # optional on Mac Apple Silicon
    build:
      context: .
      dockerfile: ./Dockerfile.node
    image: beerpongstats-node
    container_name: beerpongstats-node
    ports:
      - "5173:5173"
    restart: unless-stopped
    working_dir: /var/www
    volumes:
      - ./:/var/www
    environment:
      <<: *vite-reverb-env
    networks:
      - app-network

  db:
    platform: linux/x86_64 # optional on Mac Apple Silicon
    image: mysql:8.0
    container_name: beerpongstats-db
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: beerpongstats
      MYSQL_ROOT_PASSWORD: testroot
      MYSQL_PASSWORD: test
      MYSQL_USER: beerpongstats
    volumes:
      - dbdata:/var/lib/mysql
    networks:
      - app-network
    ports:
      - "3306:3306"

  reverb:
    build:
      context: .
      dockerfile: ./Dockerfile
    image: beerpongstats-site
    container_name: beerpongstats-reverb
    restart: unless-stopped
    working_dir: /var/www
    command: php artisan reverb:start --host=0.0.0.0 --port=8080
    volumes:
      - ./:/var/www
    environment:
      <<: *reverb-env
      REVERB_SERVER_HOST: 0.0.0.0
      REVERB_SERVER_PORT: 8080
    depends_on:
      - app
    networks:
      - app-network
    ports:
      - "8080:8080"

networks:
  app-network:
    driver: bridge

volumes:
  dbdata:
    driver: local
